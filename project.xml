<?xml version="1.0" encoding="utf-8"?>
<project>
  <meta title="Spelunk" package="com.matttuttle.spelunk" version="1.0.0" company="Matt Tuttle" />

  <app file="Spelunk" main="Main" path="bin" />

  <window fps="60" resizable="true" background="0x333333" />
  <window width="630" height="360" unless="mobile" />
  <window fullscreen="true" if="mobile" />

  <source path="src" />

  <set name="hxp_extras"/>
  <haxelib name="openfl" />
  <haxelib name="HaxePunk" />

  <assets path="assets/graphics" rename="gfx" include="*.png|*.jpg" />
  <assets path="assets/audio" rename="sfx" include="*.wav|*.ogg" />
  <assets path="assets/font" rename="font" include="*.ttf" />
  <assets path="assets/levels" rename="levels" include="*.oel" type="text" />

  <icon path="assets/HaxePunk.svg" size="256" />
</project>
